<div class="container">
    <div id="header">
        <ul>
            <h1 class="test">Burgerize !</h1>
            <img src="images/burger.jpg" alt="burger" id="burgerImg">
        </ul>
    </div>
    <div class="row">
        <div class="col-sm">
            <h2>Burgers to devour!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="devoured" data-id="{{this.id}}" data-devour="{{devoured}}">Devour!</button>
                </li>

                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h2>Devoured Burgers!</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <h2 class="add-burger">Add a Burger</h2>
    <form class="form">
        <div class="form-card">
            <label for="ca">Name of Burger:</label>
            <input type="text" id="burg" name="name">
        </div>
        <button type="submit" id="addBurger">Add Burger</button>
    </form>
</div>